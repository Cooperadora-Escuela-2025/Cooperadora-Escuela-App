                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="@string/add_to_cart"
                        android:contentDescription="@string/add_to_cart_desc_product4"
                        app:cornerRadius="8dp"
