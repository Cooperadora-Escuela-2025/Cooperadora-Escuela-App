<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra simulada -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/> <!-- Gris claro para simular sombra -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Capa principal blanca con borde -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Fondo blanco -->
            <stroke android:width="1dp" android:color="#CCCCCC"/> <!-- Borde gris -->
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>