<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cooperadora_escuela" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Estilo para los input-->
        <item name="windowActionBar">false</item> <!-- AgregÃ¡ esto -->
        <item name="windowNoTitle">true</item>    <!-- Opcional pero recomendado -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>

    </style>

    <style name="Theme.Cooperadora_escuela" parent="Base.Theme.Cooperadora_escuela" />

    <style name="MyToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleTextColor">#000000</item>
        <item name="navigationIconTint">#000000</item>
    </style>

    <!-- Tema de alto contraste para accesibilidad -->
    <style name="AppTheme.Accessible" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#FFEB3B</item> <!-- Amarillo -->
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFF99</item> <!-- Fondo amarillo claro -->
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
    </style>
</resources>