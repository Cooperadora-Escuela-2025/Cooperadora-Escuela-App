<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_stroke</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/input_background</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Small Button Style -->
    <style name="SmallButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Medium Button Style -->
    <style name="MediumButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Product image style -->
    <style name="ProductImageStyle">
        <item name="android:background">@drawable/image_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="GradientButtonStyle" parent="Widget.Material3.Button">
        <!-- Desactivamos el tint que aplica el color del theme -->
        <item name="backgroundTint">@null</item>

        <!-- Aplicamos nuestro fondo drawable -->
        <item name="android:background">@drawable/rounded_gradient_background</item>

        <!-- Color de texto del botón -->
        <item name="android:textColor">@color/button_text</item>
    </style>

    <!-- para que el logo sea redondo -->
    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--  para tema accesible + tamaño grande -->
    <style name="AccessibleTextViewLarge" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
    </style>
    <!-- Botón grande -->
    <style name="AccessibleButtonLarge" parent="Widget.Material3.Button">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- EditText grande -->
    <style name="AccessibleEditTextLarge" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textSize">20sp</item>
    </style>

    <!--  accesible con fuente grande -->
    <style name="AppTheme_Accessible_FontLarge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Incluí los estilos del tema accesible -->
        <item name="android:textViewStyle">@style/AccessibleTextViewLarge</item>
        <item name="android:buttonStyle">@style/AccessibleButtonLarge</item>
        <item name="android:editTextStyle">@style/AccessibleEditTextLarge</item>
    </style>

</resources>